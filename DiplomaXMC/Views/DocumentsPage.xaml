<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DiplomaXMC.Views.DocumentsPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#090526">
            <Label Text="Dokumentet tuaja:" 
                HorizontalOptions="CenterAndExpand"
                   FontSize="24"
                   TextColor="White"
                   Padding="0,20,0,10"
                   />
            <Image Source="Doc.PNG" 
                   HeightRequest="150"
                   WidthRequest="150"
                   Margin="0,20,0,10"/>
            <Label Text="Si duket ju nuk keni ende dokumente te ngarkuara ne projektet tuaja!"
                HorizontalOptions="CenterAndExpand"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Red"
                   Margin="0,20,0,10"
                   />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>